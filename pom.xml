	<profiles>
		<profile>
			<id>release</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>            
			<properties>
				<pe.webapp.filter>release</pe.webapp.filter>
			</properties>            
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>net.alchim31.maven</groupId>
							<artifactId>yuicompressor-maven-plugin</artifactId>
							<configuration>
								<disableOptimizations>false</disableOptimizations>
								<nomunge>false</nomunge>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
		</profile>
		<profile>
			<id>myfaces</id>
			<properties>
                <pe.jsf.impl>myfaces</pe.jsf.impl>
                <pe.jsf.group>org.apache.myfaces.core</pe.jsf.group>
                <pe.jsf.artifact>myfaces</pe.jsf.artifact>
                <pe.jsf.version>2.1.3</pe.jsf.version>
			</properties>
		</profile>        
	</profiles>

	<properties>
        <java.version.source>1.6</java.version.source>
        <java.version.target>1.6</java.version.target>
        <project.build.sourceEncoding>iso-8859-1</project.build.sourceEncoding>
        <pe.webapp.filter>development</pe.webapp.filter>
        <pe.jsf.impl>mojarra</pe.jsf.impl>
        <pe.jsf.group>com.sun.faces</pe.jsf.group>
        <pe.jsf.artifact>jsf</pe.jsf.artifact>
        <pe.jsf.version>2.1.3</pe.jsf.version>
	</properties>
