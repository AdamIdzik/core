<?xml version="1.0" encoding="utf-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<name>primefaces-extensions</name>

	<ordering>
		<after>
			<name>primefaces</name>
		</after>
	</ordering>

    <application>
        <resource-handler>org.primefaces.extensions.application.PrimeFacesExtensionsResourceHandler</resource-handler>
    </application>	

    <behavior>
        <behavior-id>org.primefaces.extensions.component.JavascriptBehavior</behavior-id>
        <behavior-class>org.primefaces.extensions.component.behavior.javascript.JavascriptBehavior</behavior-class>
    </behavior>

	<component>
		<component-type>org.primefaces.extensions.component.Head</component-type>
		<component-class>org.primefaces.extensions.component.head.Head</component-class>
	</component>
	<component>
		<component-type>org.primefaces.extensions.component.ImageAreaSelect</component-type>
		<component-class>org.primefaces.extensions.component.imageareaselect.ImageAreaSelect</component-class>
	</component>
	<component>
		<component-type>org.primefaces.extensions.component.ImageRotateAndResize</component-type>
		<component-class>org.primefaces.extensions.component.imagerotateandresize.ImageRotateAndResize</component-class>
	</component>
	<component>
		<component-type>org.primefaces.extensions.component.SaveState</component-type>
		<component-class>org.primefaces.extensions.component.savestate.SaveState</component-class>
	</component>

	<render-kit>
		<client-behavior-renderer>
			<client-behavior-renderer-type>org.primefaces.extensions.component.JavascriptBehaviorRenderer</client-behavior-renderer-type>
			<client-behavior-renderer-class>org.primefaces.extensions.component.behavior.javascript.JavascriptBehaviorRenderer</client-behavior-renderer-class>
		</client-behavior-renderer>
		<renderer>
			<component-family>org.primefaces.extensions.component</component-family>
			<renderer-type>org.primefaces.extensions.component.HeadRenderer</renderer-type>
			<renderer-class>org.primefaces.extensions.component.head.HeadRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.extensions.component</component-family>
			<renderer-type>org.primefaces.extensions.component.ImageAreaSelectRenderer</renderer-type>
			<renderer-class>org.primefaces.extensions.component.imageareaselect.ImageAreaSelectRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.extensions.component</component-family>
			<renderer-type>org.primefaces.extensions.component.ImageRotateAndResizeRenderer</renderer-type>
			<renderer-class>org.primefaces.extensions.component.imagerotateandresize.ImageRotateAndResizeRenderer</renderer-class>
		</renderer>
	</render-kit>
</faces-config>
